{
  "system": {
    "debug": false,
    "data_directory": "data",
    "log_directory": "logs",
    "version": "1.0.0",
    "startup_timeout": 60
  },
  "database": {
    "path": "data/axiom.db",
    "backup_enabled": true,
    "backup_interval": "12h",
    "max_connections": 10
  },
  "virtual_assistant": {
    "response_timeout": 30,
    "max_context_length": 1024,
    "max_response_length": 500
  },
  "policy": {
    "max_tokens": 2000,
    "temperature": 0.7,
    "stop": []
  }
}
