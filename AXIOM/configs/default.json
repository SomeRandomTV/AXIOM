{
  "system": {
    "debug": true,
    "data_directory": "data",
    "log_directory": "logs",
    "version": "1.0.0-dev",
    "startup_timeout": 30
  },
  "database": {
    "path": "data/axiom.db",
    "backup_enabled": false,
    "backup_interval": "24h",
    "max_connections": 2
  },
  "virtual_assistant": {
    "response_timeout": 60,
    "max_context_length": 256,
    "max_response_length": 150,
    "intent_config_path": "configs/intents.json"
  },
  "policy": {
    "max_tokens": 1000,
    "temperature": 0.9,
    "stop": ["TEST_STOP"],
    "banned_words": ["damn", "hell", "stupid", "idiot", "hate", "kill", "die"]
  }
}
